//.utility

.images {
  width 80%
  margin-right auto
  margin-left auto
  padding-top 20rem
  padding-bottom 20rem
}
.images-item {
  width 32rem
  height 24rem
  opacity 0
  & +.images-item {
    margin-top 3.2rem
  }
  &:nth-child(2n) {
    margin-left auto
  }
}
.images-item-img {
  width 100%
  height 100%
  object-fit cover
}
.canvas {
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  width 100%
  height 100%
  z-index -1
}


