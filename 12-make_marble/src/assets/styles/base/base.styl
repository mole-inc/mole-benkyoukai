*,
*:before,
*:after {
  backface-visibility inherit
}

html {
  position relative
  _fontSize(10, mediaDefault)
  font-family gothic
  font-weight normal
  font-style normal
  color black

  backface-visibility hidden

  /*  option setting font-kerning
    font-feature-settings 'pkna'
    letter-spacing: 0.035em
  */

  /*  option  hidden scrollbar
    -ms-overflow-style: none;
    scrollbar-width: none;
    &::-webkit-scrollbar {
      display none
    }
    +_mediaSmall(){
      -ms-overflow-style: initial;
      scrollbar-width: initial;
      &::-webkit-scrollbar {
        display initial
      }
    }
  */

  +_mediaLarge(){
    font-size 10px
  }
  +_mediaSmall(){
    _fontSize(20, 750)
  }
}




//peculiar settings
::selection {
  //color white
  //background-color theme
}

ul {
  list-style none
}

a {
  color inherit
  text-decoration none
}

canvas, svg, img {
  display block
}

table {
  border-collapse collapse
}




